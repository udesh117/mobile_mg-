rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULES - More permissive for testing
    // Replace with production rules after testing
    
    // Allow all authenticated users to read/write projects
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow all authenticated users to read/write tasks
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow all authenticated users to read/write project members
    match /projectMembers/{memberId} {
      allow read, write: if request.auth != null;
    }
  }
}

