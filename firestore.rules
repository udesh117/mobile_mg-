rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is project member
    function isProjectMember(projectId) {
      return request.auth != null && 
        exists(/databases/$(database)/documents/projectMembers/$(projectId + '_' + request.auth.uid));
    }
    
    // Helper function to check if user is project owner
    function isProjectOwner(projectId) {
      return request.auth != null && 
        get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid;
    }
    
    // Helper function to check task access
    function canAccessTask(projectId) {
      return isAuthenticated() && (
        request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId ||
        isProjectMember(projectId)
      );
    }
    
    // Projects collection (top-level)
    match /projects/{projectId} {
      // Users can read projects they own or are members of
      allow read: if isAuthenticated() && 
        (request.auth.uid == resource.data.ownerId || isProjectMember(projectId));
      
      // Users can create projects (they become owner)
      allow create: if isAuthenticated() && 
        request.auth.uid == request.resource.data.ownerId;
      
      // Only owners can update/delete projects
      allow update, delete: if isAuthenticated() && 
        request.auth.uid == resource.data.ownerId;
    }
    
    // Tasks collection (TOP-LEVEL, not subcollection)
    // This is the key fix - tasks are stored at /tasks/{taskId}, not /projects/{id}/tasks/{taskId}
    match /tasks/{taskId} {
      // Allow read if user can access the project
      allow read: if isAuthenticated() && 
        resource.data.projectId != null &&
        canAccessTask(resource.data.projectId);
      
      // Allow create if user can access the project
      allow create: if isAuthenticated() && 
        request.resource.data.projectId != null &&
        canAccessTask(request.resource.data.projectId);
      
      // Allow update/delete if user can access the project
      allow update, delete: if isAuthenticated() && 
        resource.data.projectId != null &&
        canAccessTask(resource.data.projectId);
    }
    
    // Project Members collection
    match /projectMembers/{memberId} {
      // Users can read members of projects they're in
      allow read: if isAuthenticated();
      
      // Only project owners can add/remove members
      allow create: if isAuthenticated() && 
        isProjectOwner(request.resource.data.projectId);
      
      allow update, delete: if isAuthenticated() && 
        isProjectOwner(resource.data.projectId);
    }
  }
}
